extends layout.pug

block content 
  article.grid-container.portfolio-intro
    div

      h1 My Portfolio

      p.lead.text-light
        | Welcome to my Development Portfolio! Here I showcase my coding skills and proficiences through a set of personal projects created in the TreeHouse Full Stack JavaScript Tech Degree Program
  article.grid-container.portfolio-index
    
    .grid-x.grid-margin-x.small-up-2.medium-up-2.large-up-3

      
      
      each project, index in projects
        .cell
          a(href=`project/${project.id}`)
            img.thumbnail(src=''+project.thumbnails)
            h5= project.project_name
      
